<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <!-- ✅ Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50 text-gray-800">

    <!-- ✅ Navigation -->
    <header class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-lg shadow-md border-b border-gray-200">
        <div class="max-w-7xl mx-auto flex items-center justify-between px-6 py-3">
            <!-- Logo -->
            <a href="/" class="flex items-center space-x-2">
                <img src="https://upload.wikimedia.org/wikipedia/commons/f/fa/Apple_logo_black.svg" alt="Logo" class="h-7">
                <span class="text-lg font-bold">URL Shortener</span>
            </a>

            <!-- Nav Links -->
            <nav class="hidden md:flex space-x-6 text-gray-700 font-medium">
                <a href="#" class="hover:text-blue-600 transition">How it works</a>
                <a href="#" class="hover:text-blue-600 transition">Get in touch</a>
            </nav>

            <!-- Auth Buttons -->
            <div class="flex space-x-3">
                <a href="/" class="hidden sm:inline-flex px-4 py-2 rounded-lg border border-gray-300 bg-white hover:bg-gray-100 text-sm font-semibold">Home</a>
                <a href="/signup" class="hidden sm:inline-flex px-4 py-2 rounded-lg border border-gray-300 bg-white hover:bg-gray-100 text-sm font-semibold">Sign up</a>
                <a href="/login" class="px-4 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-500 font-semibold text-sm">Login</a>
                <a href="/logout" class="px-4 py-2 rounded-lg bg-pink-600 text-white hover:bg-pink-500 font-semibold text-sm">Logout</a>
            </div>
        </div>
    </header>

    <!-- ✅ Main Section -->
    <main class="max-w-3xl mx-auto mt-28 px-4">
        <h1 class="text-center text-4xl font-extrabold mb-6 text-gray-900">Shorten Your URL</h1>
        <form action="/url" method="POST" class="flex flex-col sm:flex-row items-center justify-center gap-3">
            <input type="url" name="url" placeholder="Enter your URL" required
                class="w-full sm:flex-1 border border-gray-300 rounded-lg px-4 py-3 shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none">
            <button type="submit"
                class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg shadow-md font-semibold transition">
                Shorten
            </button>
        </form>

        <!-- ✅ Shortened URLs -->
        <h3 class="text-xl font-bold text-gray-900 mt-10 mb-4 text-center">Your Shortened URLs</h3>
        <ul class="space-y-4">
            <% url.sort().reverse().forEach(function(url) { %>
            <li class="flex flex-col sm:flex-row justify-between items-center bg-white rounded-xl shadow-md p-4 border border-gray-100">
                <a href="http://localhost:8001/<%= url.shortId %>" target="_blank"
                    class="text-blue-600 hover:underline truncate w-full sm:w-1/2 text-center sm:text-left"
                    title="http://localhost:8001/<%= url.shortId %>">
                    http://localhost:8001/<%= url.shortId %>
                </a>
                <div class="flex items-center space-x-4 mt-3 sm:mt-0">
                    <p class="text-gray-500 text-sm"><%= new Date(url.createdAt).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %></p>
                    <span class="text-gray-700 bg-gray-100 px-3 py-1 rounded-md text-sm">Clicks: <%= url.visitHistory.length %></span>
                    <button class="copy-btn bg-blue-500 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm"
                        data-url="http://localhost:8001/<%= url.shortId %>">
                        Copy
                    </button>
                </div>
            </li>
            <% }); %>
        </ul>
    </main>

    <!-- ✅ Footer -->
    <footer class="bg-gray-900 text-gray-300 mt-12 py-10">
        <div class="max-w-7xl mx-auto px-6 grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
                <h3 class="text-xl font-bold mb-3 text-white">Company Name</h3>
                <p class="text-sm">Shorten URLs easily and efficiently. Simplify your links and enhance sharing.</p>
            </div>
            <div>
                <h3 class="text-xl font-bold mb-3 text-white">Contact Us</h3>
                <ul class="space-y-2 text-sm">
                    <li><a href="#" class="hover:text-white">Phone: +91-79787-66971</a></li>
                    <li><a href="mailto:info@lorem.mail" class="hover:text-white">Email: info@lorem.mail</a></li>
                    <li><a href="#" class="hover:text-white">Address: 312 Lovely Street, NY</a></li>
                </ul>
            </div>
            <div>
                <h3 class="text-xl font-bold mb-3 text-white">Info</h3>
                <p class="text-sm">URLs created here are automatically deleted after 30 days for security reasons.</p>
            </div>
        </div>
    </footer>

    <!-- ✅ JS: Copy Button -->
    <script>
        document.addEventListener('click', function (event) {
            if (event.target.classList.contains('copy-btn')) {
                const url = event.target.getAttribute('data-url');
                navigator.clipboard.writeText(url).then(() => {
                    alert('Copied to clipboard!');
                });
            }
        });
    </script>
</body>
</html>
