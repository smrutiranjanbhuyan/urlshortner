<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom styles */
        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="#">URL Shortener</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <!-- You can add more links here if needed -->
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/signup">Signup</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <h1 class="mt-5 mb-4">URL Shortener</h1>
        <form action="/url" method="POST">
            <div class="input-group mb-3">
                <input type="url" 
                class="form-control" placeholder="Enter URL" name="url" required>
                <button class="btn btn-primary" type="submit">Shorten URL</button>
            </div>
        </form>
        <h3>Shortened URLs:</h3>
        <ul class="list-group mb-3">
            <% url.forEach(function(url) { %>
                <li class="list-group-item">
                    <a target="_blank" href="http://localhost:8001/<%= url.shortId %>">http://localhost:8001/<%= url.shortId %></a>
                    <span class="badge bg-secondary">Clicks: <%= url.visitHistory.length %></span>
                </li>
            <% }); %>
        </ul>
    </div>
    <!-- Bootstrap JS (Optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
